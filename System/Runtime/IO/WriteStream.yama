namespace "System.Runtime.IO"
{
    using "System";
    using "System.IO";
    using "System.Collections";

    public static class WriteStream
    {

        // -----------------------------------------------

        #region vars

        // -----------------------------------------------

        private int filestream_id;

        // -----------------------------------------------

        //private string filepath;

        // -----------------------------------------------

        #endregion vars

        // -----------------------------------------------

        #region ctor

        // -----------------------------------------------

        public this new ( string filepath )
        {
            //this.filepath = filepath;

            this.filestream_id = InputOutput.ExecWith1Arg ( 9, filepath, 6 );

            return this;
        }

        // -----------------------------------------------

        public this ~ (  )
        {
            InputOutput.ExecWith1Arg ( 8, this.filestream_id, 6 );
        }

        // -----------------------------------------------

        #endregion ctor

        // -----------------------------------------------

        #region methods

        // -----------------------------------------------

        public bool WriteNextBytes(ByteArray array)
        {
            return InputOutput.ExecWith2Args ( 10, this.filestream_id, array, 6 );
        }

        // -----------------------------------------------

        #endregion methods

        // -----------------------------------------------

    }
}

